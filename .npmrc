# Evita conflictos de dependencias entre React y React Native
legacy-peer-deps=true

# Siempre instalar versiones exactas (evita actualizaciones autom√°ticas)
save-exact=true

# Activa logs limpios en la terminal
loglevel=error

# ================================
# üì¶ CACHE Y RENDIMIENTO
# ================================

# Ruta de cache de npm (evita conflictos en macOS)
cache=${HOME}/.npm-cache

# ================================
# üß© CONFIGURACIONES EXPO / RN
# ================================

# Permite a Expo y EAS trabajar correctamente
engine-strict=false

# Registry oficial de npm
@expo:registry=https://registry.npmjs.org/
registry=https://registry.npmjs.org/

# ================================
# üîê SEGURIDAD Y ESTABILIDAD
# ================================

# Desactiva auditor√≠as autom√°ticas (evita bloqueos en instalaci√≥n)
audit=false

# Previene descargas no verificadas
fund=false
